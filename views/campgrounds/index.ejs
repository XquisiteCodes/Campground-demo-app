<% include ../partials/header %>

<div class="container">
  <header class="jumbotron"><h1>Welcome to Campgrounds</h1>
  <a class="btn btn-primary btn-large" href="/post/new">Add new campground</a>
  </header>
  <div class="row text-center">
    <% posts.forEach(function(post){ %>
      <div class="col-md-3 col-sm-6">
        <div id="thumb" class="thumbnail">
            <div class="caption">
              <h1> <%= post.title %> </h1>
            </div>
            <img src="<%= post.image %>" alt="None">
            <span> <%=post.created.toDateString()%> </span>
            
            <% if (post.description.length  >= 100){%>
                <p><%= post.description.substring(0,50) %></p>
              
            <% } %>
      
            <a href="/post/<%= post._id %>">Read More</a>
        </div>
      </div>      
          <% }) %>
      
      
  </div>
</div>

<% include ../partials/footer %>